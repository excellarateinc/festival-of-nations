// Axis Settings (http://roots.cx/axis)

// font stack (add your own!)
helvetica-neue = "Helvetica Neue", HelveticaNeue, Helvetica, Arial, sans-serif
helvetica = "Helvetica Neue", Helvetica, Arial, sans-serif
rokkitt = "Rokkitt", Helvetica, Arial, sans-serif
georgia = Georgia, Cambria, "Times New Roman", Times, serif
lucidia-grande = "Lucida Grande", Tahoma, Verdana, Arial, sans-serif
monospace = unquote("'Bitstream Vera Sans Mono', Consolas, Courier, monospace")
verdana = Verdana, Geneva, sans-serif

// default font stack
font-stack = rokkitt
font-size = 20px
font-color = #263137

containerWidth = 850px
headerHeight = 65px
niceFontFamily='Montserrat'
showMobileNavWidth = 846px
slideshowBaseHeight = 150px
rupture.scale = 0 700px 850px 1000px 1200px 1400px
dirtyYellow = #27e637
primaryBgColor = #FFAC00
darkTextcolor =#263137
secondaryBgColor = #53BBF4

// colors (via http://clrs.cc - slightly modded)
navy = #001F3F
blue = #0074D9
aqua = #7FDBFF
teal = #39CCCC
olive = #3D9970
green = #2ECC40
lime = #01FF70
yellow = #FFDC00
orange = #FF851B
red = #D13F19
maroon = #85144B
fuchsia = #F012BE
purple = #B10DC9
white = #FFFFFF
silver = #DDDDDD
gray = #AAAAAA
black = #222222

// default color
default-color = blue

// text highlight color
highlight-color = blue

// ligatures
ligatures = false

// vertical rhythm
base-line-height = 24px
default-rhythm-border-style = solid
relative-font-sizing = true
round-to-nearest-half-line = false
min-line-padding = 2px

// custom image base path for roots mixins
img-path = ''

// support for old IE
support-for-ie = false

// progressive IE (http://css3pie.com/)
pie-enabled = false
pie-path = '/pie.htc'


// mobile media queries
minWidthIphone4and5 = 320px

iphone3 = "only screen and (min-device-width: "+minWidthIphone4and5 + ") and (max-device-width: 480px) and (-webkit-min-device-pixel-ratio: 1)"
iphone4 = "only screen and (min-device-width: "+minWidthIphone4and5 + ") and (max-device-width: 480px) and (-webkit-min-device-pixel-ratio: 2)"
iphone5 = "only screen and (min-device-width: "+minWidthIphone4and5 + ") and (max-device-width: 568px) and (-webkit-min-device-pixel-ratio: 2)"
iphone6 = "only screen and (min-device-width: 375px) and (max-device-width: 667px) and (-webkit-min-device-pixel-ratio: 3)"
iphone6plus = "only screen and (min-device-width: 414px) and (max-device-width: 736px) and (-webkit-min-device-pixel-ratio: 3)"


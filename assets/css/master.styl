@import '_settings'
@import 'jeet'

normalize-css()
base()
//edit()


h1
  font-family niceFontFamily, font-stack
  font-size 48px
h2
  font-family niceFontFamily, font-stack
  font-size 42px

h3
  font-family niceFontFamily, font-stack
  font-size 36px

p
  line-height 1.5em
  a, a:link, a:visited
    color #db2814
    webkit-transition opacity .25s ease
    transition opacity .25s ease
    text-decoration underline
  a:hover
    opacity 0.75
    text-decoration none

ul
  list-style none

a, a:active
  outline none
  text-decoration none
  cursor pointer
  transition all .25s ease-in-out
  -moz-transition all .25s ease-in-out
  -webkit-transition: all .25s ease-in-out
  outline: 0

dl
  padding 0.5em

dt
  float left
  clear left
  width 175px
  text-align right
  font-weight: bold

dt:after
    content ":"

dd
  margin 0 0 0 185px
  padding 0 0 0.5em 0

body
  background-color #000000

.right
  float right
.left
  float left

.wrapper
  +above(1000px)
    width 80%
    margin-right 10%
    margin-left 10%
  +below(1000px)
    width 100%
    margin-left 0
    margin-right 0

.wrapper-content
  margin-top headerHeight

.content
  width 90%
  margin 0 auto
  overflow hidden
  .colLeft
    float left
  .colRight
    float right
  .long
    width 400px
    margin 70px 0 0 0
  .short
    width 45%
    margin 0

.slideshow
  height 500px
  width 100%
  overflow hidden
  position relative
  background #595959
  +at(1)
    height slideshowBaseHeight + 50px
  +at(2)
    height slideshowBaseHeight + 100px
  +at(3)
    height slideshowBaseHeight + 200px

#header-wrapper
  height headerHeight
  +above(1000px)
    width 80%
  +below(1000px)
    width 100%
  z-index 15
  background: primaryBgColor
  position fixed
  text-transform uppercase
  background rgba(255, 172, 0, 0.9)
  transition background 0.5s ease
  -webkit-transition:background 0.5s ease
  top 0
  .logo
    float left
    margin 5px 0 0 5px
    width 235px

.header
  margin 0 auto
  height headerHeight


#main-logo
  +below(showMobileNavWidth)
    display none

#nav
  +below(showMobileNavWidth)
    display none
  ul
    float right
    margin 0
    li
      font-family niceFontFamily, font-stack
      font-size 18px
      float left
      display block
      &:hover
        ul
          left auto
          padding-top 50x
          //min-width 100%
          li
            float none
            background rgba(255, 172, 0, 0.9)
      a
        color darkTextcolor
        display block
        padding 20px 5px 23px 6px
        &:hover
          color darkTextcolor
          background-color white

      .last
        padding-right 13px

      /* submenu positioning*/
      ul
        position absolute
        white-space nowrap
        z-index 1
        left -99999em


.slicknav_menu
   +above(showMobileNavWidth)
      display none
   +below(showMobileNavWidth)
      display block

.primary-logo
  text-align center
  padding 80px
  img
    max-width 100%
    height auto
    width auto\9 /* ie8 */

.main
  .section1
    background url('/img/map9.png') primaryBgColor
    padding 10px 0 20px
    text-align center

  .section2
    background secondaryBgColor
    padding 20px 20px 50px
    h2
      padding 50px
      background url('/img/PlateWhite.png') no-repeat center center
      -webkit-background-size contain
      -moz-background-size contain
      -o-background-size contain
      background-size contain
      text-align center
    h3, h4
      margin 10px
    .icon
      background white
      height 100px
      width 100px
      margin 0 auto 30px
      border-radius 50%
    ul
      list-style-type circle
      li
        line-height 2em

  .section3
    background white
    padding 40px 20px 50px
    h2
      text-align center
    ul
      list-style-type circle
      li
        line-height 2em

  p
    margin-top 10px
    padding 10px
  transition: all .5s ease
  +below(600px)
    stack()

.explore
  img
    width 450px

.legacy
  padding: 7px
  a
    float left
    margin-right 10px
  cf()

.logos
   a
    col(1/3, cycle: 3)
    margin-bottom 12px
    text-align center
   img
     center()
   cf()

#highlights
  h2
    margin-bottom 55px
  h3
    margin-bottom 15px
  ul
    list-style-type none
    cf()
  li
    float left
    width 20%
    text-align center
    height 300px
    margin 0 2.4%
    font-size 15px
    line-height 2em
    +at(4)
      width 28.2%
      height 275px
    +at(2)
      width 44%
    +at(1)
      width 100%
      height auto
      margin 0 0 60px 0
    p
      font-size 20px
    a
      font-family: "Helvetica Neue"
      color darkTextcolor
      font-size 4em
      &:hover
        background primaryBgColor

#footer
  p
    float left
    padding-top 40px
  .logo
    float right
  padding 5px 5px 15px 5px
  background #31343c
  color #ffffff
  a
    color white
    &:hover
      color primaryBgColor
  cf()


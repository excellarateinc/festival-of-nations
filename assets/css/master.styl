@import '_settings'
@import 'jeet'

normalize-css()
base()
//edit()

containerWidth = 850px
headerHeight = 65px
niceFontFamily='Montserrat'
defaultFontFamily = Helvetica
showMobileNavWidth = 846px
slideshowBaseHeight = 150px
rupture.scale = 0 700px 850px 1000px 1200px 1400px
dirtyYellow = #27e637
primaryBgColor = #FFAC00
darkTextcolor =#263137
secondaryBgColor = #53BBF4

h1
  font-family niceFontFamily, defaultFontFamily
  font-size 48px
h2
  font-family niceFontFamily, defaultFontFamily
  font-size 42px

h3
  font-family niceFontFamily, defaultFontFamily
  font-size 36px


ul
  list-style none

a, a:active
  outline none
  text-decoration none
  cursor pointer
  transition all .25s ease-in-out
  -moz-transition all .25s ease-in-out
  -webkit-transition: all .25s ease-in-out
  outline: 0

dl
  padding 0.5em

dt
  float left
  clear left
  width 175px
  text-align right
  font-weight: bold

dt:after
    content ":"

dd
  margin 0 0 0 185px
  padding 0 0 0.5em 0


.wrapper
  margin-top headerHeight

.content
  width 90%
  margin 0 auto
  overflow hidden
  .colLeft
    float left
  .colRight
    float right
  .long
    width 400px
    margin 70px 0 0 0
  .short
    width 50%
    margin 0

.slideshow
  height 450px
  width 100%
  overflow hidden
  position relative
  background #595959
  +at(1)
    height slideshowBaseHeight + 50px
  +at(2)
    height slideshowBaseHeight + 100px
  +at(3)
    height slideshowBaseHeight + 200px

#header-wrapper
  height headerHeight
  width 100%
  z-index 15
  background: primaryBgColor
  position fixed
  text-transform uppercase
  background rgba(255, 172, 0, 0.9)
  transition background 0.5s ease
  -webkit-transition:background 0.5s ease
  top 0
  left 0
  .logo
    float left
    margin 5px 0 0 5px
    width 235px

.header
  margin 0 auto
  height headerHeight


#main-logo
  +below(showMobileNavWidth)
    display none

#nav
  +below(showMobileNavWidth)
    display none
  ul
    float right
    margin 0
    li
      font-family niceFontFamily, defaultFontFamily
      font-size 18px
      float left
      display block
      &:hover
        ul
          left auto
          padding-top 50x
          //min-width 100%
          li
            float none
            background rgba(255, 172, 0, 0.9)
      a
        color darkTextcolor
        display block
        padding 20px 5px 23px 6px
        &:hover
          color darkTextcolor
          background-color white

      .last
        padding-right 13px

      /* submenu positioning*/
      ul
        position absolute
        white-space nowrap
        z-index 1
        left -99999em


.slicknav_menu
   +above(showMobileNavWidth)
      display none
   +below(showMobileNavWidth)
      display block


.main
  .section1
    background primaryBgColor
    padding 10px 0 20px
    text-align center
  .decorative-plate
    background url('/img/PlateWhite.png') no-repeat center center primaryBgColor
    -webkit-background-size contain
    -moz-background-size contain
    -o-background-size contain
    background-size contain
  .section2
    background secondaryBgColor
    padding 110px 0 50px
    h2
      text-align center
    ul
      cf()
    li
      float left
      width 20%
      text-align center
      height 250px
      margin 0 2.4%
      font-size 15px
      +at(4)
        width 28.2%
        height 275px
      +at(2)
        width 44%
      +at(1)
        width 100%
        height auto
        margin 0 0 60px 0
      a
        color darkTextcolor
        font-size 4em
        &:hover
          background primaryBgColor
    h3, h4
      margin 10px
    .icon
      background white
      height 100px
      width 100px
      margin 0 auto 30px
      border-radius 50%
  .section3
    padding 40px 20px 50px
    h2
      text-align center
    ul
      list-style-type circle

  p
    margin-top 10px
    padding 10px
  transition: all .5s ease
  +below(600px)
    stack()

.explore
  img
    width 450px

.legacy
  padding: 7px
  a
    float left
    margin-right 10px
  cf()

.logos
   a
    col(1/3, cycle: 3)
    margin-bottom 6px
   img
     center()
   cf()

#footer
  padding 20px 5px 10px 5px
  background-color #31343c
  color #ffffff
  .col
    col(1/3)
    a
      text-align center
      color #31343c
      letter-spacing 1px
      border-radius 25px
      width 170px
      background primaryBgColor
      display block
      font-size 13px
      height 30px
      padding 7px 0 0 0
      &:hover
        background dirtyYellow
  cf()

